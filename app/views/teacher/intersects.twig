{% extends "layout.twig" %}

{% block page %}
        <div class="hero-unit">
            <div class="page-header text-center">
                <h1>Intersected Teachers</h1>
            </div>
            {% if teachers %}
            <div class="span5"><div class="alert alert-success text-center">
                    <strong>{{ teachers[0].firstName }} {{ teachers[0].lastName }}</strong>
                </div></div>
            <div class="span5 pull-right"><div class="alert alert-success text-center">
                    <strong>{{ teachers[1].firstName }} {{ teachers[1].lastName }}</strong>
                </div></div>
                {% if students %}
                <div class="span3"></div>
                <div class="span6 text-center">
                    <div class="text-center">
                        <h3>Mutual Students</h3>
                    </div>
                    <table class="table table-hover table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for elem in students %}
                            <tr>
                                <td>{{ elem.id }}</td>
                                <td>{{ elem.first_name }} {{ elem.last_name }}</td>
                                <td>{{ elem.email }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            <div style="clear: left"></div>
            {% endif %}
        </div>
{% endblock %}