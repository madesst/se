{% extends "layout.twig" %}

{% block page %}
        <div class="page-header">
            <h1>Teachers Special List (only april birthday students)</h1>
        </div>
        <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Gender</th>
            </tr>
            </thead>
            <tbody>
            {% for elem in teachers %}
                <tr>
                    <td>{{ elem.id }}</td>
                    <td>{{ elem.first_name }} {{ elem.last_name }}</td>
                    <td>{{ elem.phone }}</td>
                    <td>{% if elem.sex %}Male{% else %}Female{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}